<!DOCTYPE html>
 <html>

 <head>
          <title>Memo cards</title>
          <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
          <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
          <%= csrf_meta_tags %>
        </head>
   <body>

    <div>
      <!-- Nav tabs -->
      <ul class="nav nav-tabs">
        <li class="active"> <a href="#home" data-toggle="tab"> <%= link_to('Home', root_url) %> </a> </li>
        <li> <a href="#profile"  data-toggle="tab"> Login <% link_to('Login', new_user_session_path, :id => "login_link") %> </a></li>
        <li> <a data-toggle="tab"><%= link_to "About", root_url + "pages/about" %> </a> </li>
        <div class='tab-content'>
          <div class="tab-pane active" id="home">   KooshKoosh learns Hebrew v1 </div>
          <div class="tab-pane fade" id="profile">
            <div id="container">
              <ul class ="nav nav-pills" id="text-status">
                <% if user_signed_in? %>  signed in as: <%= current_user.email   %>
                    <%=link_to "Sign out", destroy_user_session_path , :method => :delete %>
                      <% else %> you are log out <%= link_to('Login', new_user_session_path , :id => "login_link") %> or <%= link_to('Sign up', new_user_registration_path) %>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="tab-pane fade" id="messages"> KooshKoosh learns hebrew. created by:Tal </div>
        </div>
      </ul>
      <!-- tab section -->
    </div>
        <%= yield %>
    </body>
</html>
